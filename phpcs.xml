<?xml version="1.0"?>
<ruleset name="HealthyBite Coding Standard">
    <description>HealthyBite PHP Coding Standards</description>

    <!-- Scan these files -->
    <file>admin</file>
    <file>api</file>
    <file>includes</file>
    <file>config</file>
    <file>*.php</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Use PSR-12 as base -->
    <rule ref="PSR-12"/>

    <!-- Show progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use tabs for indentation -->
    <arg name="tab-width" value="4"/>

    <!-- Check for PHP cross-version compatibility -->
    <config name="testVersion" value="7.4-"/>

    <!-- Paths to check -->
    <file>.</file>
</ruleset>